{
    "name": "abstract-factory/ui-components",
    "description": "Abstract Factory pattern implementation for UI components",
    "type": "project",
    "require": {
        "php": ">=8.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0",
        "phpstan/phpstan": "^1.10",
        "friendsofphp/php-cs-fixer": "^3.0"
    },
    "autoload": {
        "psr-4": {
            "Tokimikichika\\AbstractFactory\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tokimikichika\\AbstractFactory\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "analyse": "phpstan analyse",
        "cs-fix": "php-cs-fixer fix --config=.php-cs-fixer.php"
    }
}
